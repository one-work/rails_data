<td><%= model.id %></td>
<td><%= simple_format(model.parameters) %></td>
<td><%= model.headers.join(',') %></td>
<td><%= model.timestamp %></td>
<td id="done_<%= model.id %>">
  <% if model.done %>
    <i class="fa-solid fa-check text-success"></i>
  <% else %>
    <i class="fa-solid fa-times text-danger"></i>
  <% end %>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'run', id: model.id }, method: :patch, aria: { label: t('.run.title') }, data: { turbo_confirm: t('.run.confirm') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-caret-right"></i>
    <% end %>
    <%= link_to({ action: 'xlsx', id: model.id, format: 'xlsx' }, aria: { label: t('.export') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-file-excel"></i>
    <% end %>
    <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'circle-info', class: 'icon text-info' %>
    <% end %>
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.destroy.confirm') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'trash', class: 'icon text-danger' %>
    <% end %>
  </div>
  <div>
    <%= link_to t('.csv'), { action: 'show', id: model.id, format: 'csv' }, class: 'button is-small is-link' %>
    <%= link_to t('.excel'), { action: 'show', id: model.id, format: 'xlsx' }, class: 'button is-small is-info' %>
    <%= link_to t('.pdf'), { action: 'pdf', id: model.id }, target: '_blank', class: 'button is-small is-primary' %>
  </div>
</td>